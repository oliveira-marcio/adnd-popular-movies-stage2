<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="actionBarStyle">@style/NewsAppBarStyle</item>

        <!-- Para habilitar o efeito de transição dos posters em API >= 21 -->
        <item name="android:windowContentTransitions">true</item>

    </style>

    <!-- Tema da AppBar -->
    <style name="NewsAppBarStyle" parent="style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <!-- Remove a sombra da AppBar -->
        <item name="elevation">0dp</item>
    </style>
</resources>