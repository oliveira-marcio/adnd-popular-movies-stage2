<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/selectableItemBackground"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="3"
        android:textAppearance="?android:textAppearanceMedium"
        android:textStyle="italic"
        tools:text="Review qualquer de um usuário com bastante informação, críticas apuradas, muitas curiosidades, que pode ter várias linhas e ser necessário cortá-lo" />

    <TextView
        android:id="@+id/tv_author"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:layout_marginTop="@dimen/review_margin_top"
        android:ellipsize="end"
        android:gravity="right"
        android:maxLines="1"
        android:textAppearance="?android:textAppearanceSmall"
        tools:text="(Nome do autor)" />

</LinearLayout>